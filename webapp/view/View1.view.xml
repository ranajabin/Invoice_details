<mvc:View controllerName="northwindinvoices.northwindodatainvoicesproject.controller.View1" displayBlock="true" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:smartTable="sap.ui.comp.smarttable">
    <Page id="page" title="{i18n>title}" titleAlignment="Center">
        <content>
            <Toolbar>
                <Title text="Invoices Table:" />
                <ToolbarSpacer />
                <SearchField width="30%" search="onFilterSearch" />
            </Toolbar>
            <!--     <Button type = "Emphasized" text = " View2" press = "onClick1"/>  -->

            <ScrollContainer height="100%" width="100%" vertical="true" focusable="true">
                <Table id="Tab" width="100rem" inset="false" items="{model1>/results}" sticky="ColumnHeaders,HeaderToolbar" alternateRowColors="true">
                    <columns>
                        <Column width="8rem">
                            <Text text="ShipName" />
                        </Column>

                        <Column width="8rem">
                            <Text text="ShipAddress" />
                        </Column>

                        <Column width="8rem">
                            <Text text="ShipCity" />
                        </Column>

                        <Column width="8rem">
                            <Text text="ShipRegion" />
                        </Column>

                        <Column width="8rem">
                            <Text text="ShipPostalCode" />
                        </Column>

                        <Column width="8rem">
                            <Text text="ShipCountry" />
                        </Column>

                        <Column width="8rem">
                            <Text text="CustomerID" />
                        </Column>

                        <Column width="8rem">
                            <Text text="CustomerName" />
                        </Column>

                        <Column width="8rem">
                            <Text text="Address" />
                        </Column>

                        <Column width="8rem">
                            <Text text="City" />
                        </Column>

                        <Column width="8rem">
                            <Text text="Region" />
                        </Column>

                        <Column width="8rem">
                            <Text text="PostalCode" />
                        </Column>

                        <Column width="8rem">
                            <Text text="Country" />
                        </Column>

                        <Column width="8rem">
                            <Text text="Salesperson" />
                        </Column>

                        <Column width="8rem">
                            <Text text="OrderID" />
                        </Column>

                        <Column width="8rem">
                            <Text text="OrderDate" />
                        </Column>

                        <Column width="8rem">
                            <Text text="RequiredDate" />
                        </Column>

                        <Column width="8rem">
                            <Text text="ShippedDate" />
                        </Column>

                        <Column width="8rem">
                            <Text text="ShipperName" />
                        </Column>

                        <Column width="8rem">
                            <Text text="ProductID" />
                        </Column>

                        <Column width="8rem">
                            <Text text="ProductName" />
                        </Column>

                        <Column width="8rem">
                            <Text text="UnitPrice" />
                        </Column>

                        <Column width="8rem">
                            <Text text="Quantity" />
                        </Column>

                        <Column width="8rem">
                            <Text text="Discount" />
                        </Column>

                        <Column width="8rem">
                            <Text text="ExtendedPrice" />
                        </Column>

                        <Column width="8rem">
                            <Text text="Freight" />
                        </Column>
                    </columns>

                    <items>
                        <ColumnListItem type="Active" id="col1" press="onRowClick">
                            <cells>
                                <Text text="{model1>ShipName}" />
                                <Text text="{model1>ShipAddress}" />

                                <Text text="{model1>ShipCity}" />
                                <Text text="{model1>ShipRegion}" />
                                <Text text="{model1>ShipPostalCode}" />
                                <Text text="{model1>ShipCountry}" />
                                <Link text="{model1>CustomerID}" press="onClick" />
                                <Text text="{model1>CustomerName}" />
                                <Text text="{model1>Address}" />
                                <Text text="{model1>City}" />
                                <Text text="{model1>Region}" />
                                <Text text="{model1>PostalCode}" />
                                <Text text="{model1>Country}" />
                                <Text text="{model1>Salesperson}" />
                                <Text text="{model1>OrderID}" />
                                <!--  <Text text="{path:'model1>OrderDate',type: 'sap.ui.model.type.Date',                               			
                                formatOptions: {style: 'short'}}" />  -->
                                <Text text="{model1>OrderDate}" />

                                <!--  <Text text="{path: model1>RequiredDate',type:'sap.ui.model.type.Date',                           			
                                formatOptions: {style: 'short'}}" />  -->
                                <Text text="{model1>RequiredDate}" />

                                <!--  <Text text="{path: 'model1>ShippedDate',type: 'sap.ui.model.type.Date',
                                formatOptions: {style: 'short'}}" />   -->
                                <Text text="{model1>ShippedDate}" />

                                <Text text="{model1>ShipperName}" />
                                <Text text="{model1>ProductID}" />
                                <Text text="{model1>ProductName}" />
                                <Text text="{model1>UnitPrice}" />
                                <Text text="{model1>Quantity}" />
                                <Text text="{model1>Discount}" />
                                <Text text="{model1>ExtendedPrice}" />
                                <Text text="{model1>Freight}" />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </ScrollContainer>
        </content>
    </Page>
</mvc:View>
